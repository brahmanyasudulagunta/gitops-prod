apiVersion: apps/v1
kind: Deployment
metadata:
  name: gitops-demo-canary
  namespace: dev
spec:
  replicas: 1
  selector:
    matchLabels:
      app: gitops-demo
      track: canary
  template:
    metadata:
      labels:
        app: gitops-demo
        track: canary
    spec:
      serviceAccountName: gitops-app-sa
      containers:
      - name: app
        image: ashrith2727/gitops:v2   # NEW VERSION
        ports:
        - containerPort: 3000
        readinessProbe:
          httpGet:
            path: /health
            port: 3000
        livenessProbe:
          httpGet:
            path: /health
            port: 3000
        env:
        - name: APP_ENV
          valueFrom:
            secretKeyRef:
              name: app-secrets
              key: APP_ENV
